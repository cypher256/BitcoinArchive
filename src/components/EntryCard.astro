---
import { formatDate, localePath, useTranslations } from '../i18n/utils';
import type { Lang } from '../i18n/ui';

interface Props {
  id: string;
  title: string;
  date: Date;
  author: string;
  source: string;
  description: string;
  isSatoshi: boolean;
  lang: Lang;
}

const { id, title, date, author, source, description, isSatoshi, lang } = Astro.props;
const t = useTranslations(lang);
const sourceLabel = t(`source.${source}` as any) || source;
const href = localePath(`/entries/${id}/`, lang);
---

<article class="entry-card">
  <a href={href} class="card-link">
    <div class="card-header">
      <time datetime={date.toISOString()}>{formatDate(date, lang)}</time>
      <span class="source-badge">{sourceLabel}</span>
    </div>
    <h3 class="card-title">{title}</h3>
    <p class="card-author">
      <span class:list={[{ satoshi: isSatoshi }]}>{author}</span>
    </p>
    <p class="card-description">{description}</p>
  </a>
</article>

<style>
  .entry-card {
    border-bottom: 1px solid var(--color-border);
    padding: 1.25rem 0;
  }
  .entry-card:last-child {
    border-bottom: none;
  }
  .card-link {
    display: block;
    color: inherit;
    text-decoration: none;
  }
  .card-link:hover .card-title {
    color: var(--color-link);
  }
  .card-link:hover {
    text-decoration: none;
  }
  .card-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: var(--font-heading);
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin-bottom: 0.3rem;
  }
  .source-badge {
    display: inline-block;
    padding: 0.1em 0.5em;
    background: var(--color-source-bg);
    border-radius: 3px;
  }
  .card-title {
    margin: 0 0 0.25rem;
    font-size: 1.15rem;
    font-weight: 600;
    line-height: 1.4;
  }
  .card-author {
    font-family: var(--font-heading);
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin: 0 0 0.3rem;
  }
  .satoshi {
    color: var(--color-satoshi);
    font-weight: 600;
  }
  .card-description {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.6;
  }
</style>
