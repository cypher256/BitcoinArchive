---
import { useTranslations, formatDate, localePath, translateTag } from '../i18n/utils';
import type { Lang } from '../i18n/ui';

interface Participant {
  name: string;
  slug: string;
}

interface Props {
  date: Date;
  author: string;
  source: string;
  sourceUrl: string;
  isSatoshi: boolean;
  lang: Lang;
  participants?: Participant[];
  tags?: string[];
}

const { date, author, source, sourceUrl, isSatoshi, lang, participants = [], tags = [] } = Astro.props;
const t = useTranslations(lang);
const sourceLabel = t(`source.${source}` as any) || source;
---

<div class="entry-meta">
  <time datetime={date.toISOString()}>{formatDate(date, lang)}</time>
  <span class="meta-sep">&middot;</span>
  <span class:list={['author', { satoshi: isSatoshi }]}>{author}</span>
  <span class="meta-sep">&middot;</span>
  <span class="source-badge">{sourceLabel}</span>
</div>

{participants.length > 0 && (
  <div class="participants-row">
    <span class="participants-label">{lang === 'ja' ? '参加者:' : 'Participants:'}</span>
    {participants.map((p, i) => (
      <>
        <a href={localePath(`/participants/${p.slug}/`, lang)} class:list={["participant-link", { satoshi: p.name === 'Satoshi Nakamoto' }]}>
          {p.name}
        </a>
        {i < participants.length - 1 && <span class="participant-sep">,&nbsp;</span>}
      </>
    ))}
  </div>
)}

{tags.length > 0 && (
  <div class="tags-row">
    {tags.map((tag) => (
      <a href={localePath(`/tags/${tag}/`, lang)} class="tag-link">
        {translateTag(tag, lang)}
      </a>
    ))}
  </div>
)}

<style>
  .entry-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.4rem;
    font-family: var(--font-heading);
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-bottom: 0.5rem;
  }
  .meta-sep {
    color: var(--color-border);
  }
  .author.satoshi {
    color: var(--color-satoshi);
    font-weight: 600;
  }
  .source-badge {
    display: inline-block;
    padding: 0.1em 0.5em;
    background: var(--color-source-bg);
    border-radius: 3px;
    font-size: 0.8rem;
  }
  .participants-row {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    font-family: var(--font-heading);
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
    gap: 0.15rem;
  }
  .participants-label {
    margin-right: 0.3rem;
  }
  .participant-link {
    text-decoration: none;
    color: var(--color-link);
  }
  .participant-link:hover {
    text-decoration: underline;
  }
  .participant-link.satoshi {
    color: var(--color-satoshi);
    font-weight: 600;
  }
  .participant-sep {
    color: var(--color-text-muted);
  }
  .tags-row {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.35rem;
    font-family: var(--font-heading);
    font-size: 0.8rem;
    margin-bottom: 1.5rem;
  }
  .tag-link {
    display: inline-block;
    padding: 0.15em 0.55em;
    background: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    border-radius: 3px;
    color: var(--color-text-muted);
    text-decoration: none;
  }
  .tag-link:hover {
    color: var(--color-text);
    border-color: var(--color-text-muted);
    text-decoration: none;
  }
</style>
