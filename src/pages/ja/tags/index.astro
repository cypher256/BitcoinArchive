---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { useTranslations, getEntries, localePath, translateTag } from '../../../i18n/utils';

const lang = 'ja';
const t = useTranslations(lang);
const entries = await getEntries('en');

const tagCounts = new Map<string, number>();
for (const entry of entries) {
  for (const tag of entry.data.tags ?? []) {
    tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
  }
}
const tags = Array.from(tagCounts.entries()).sort((a, b) => b[1] - a[1]);
---

<BaseLayout
  title={`${t('nav.tags')} - ${t('site.title')}`}
  description={t('site.description')}
  lang={lang}
  alternateEn="https://cypher256.github.io/BitcoinArchive/tags/"
>
  <div class="container">
    <h1>{t('nav.tags')}</h1>
    <ul class="tag-list">
      {tags.map(([tag, count]) => (
        <li>
          <a href={localePath(`/tags/${tag}/`, lang)}>
            {translateTag(tag, lang)}
          </a>
          <span class="count">({count})</span>
        </li>
      ))}
    </ul>
  </div>
</BaseLayout>

<style>
  .tag-list { list-style: none; padding: 0; }
  .tag-list li {
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--color-border);
    font-size: 1.1rem;
  }
  .count { color: var(--color-text-muted); font-size: 0.9rem; }
</style>
